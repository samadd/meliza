doctype html
html
    head
        title MELIZA Dashboard
        meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
        block scripts
            script(src="/resources/node_modules/angular/angular.min.js")
            script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.3/Chart.min.js")
        block css
            link(rel="stylesheet" href="/resources/css/dashboard.css")
        
    body(ng-app="meliza")
        header
            h1 MELIZA Dashboard
        div.say(ng-controller="sayCtrl")
            div.control
                input(type="number", ng-model="targetLength", ng-init="targetLength = 10;")
                input(type="text", ng-model="responseWord")
                input(type="button", value="Say Statement", ng-click="getStatement(targetLength)")
                input(type="button", value="Respond", ng-click="getResponse(targetLength, responseWord)")
            div.results
                p(ng-repeat="statement in statements") {{statement}}
        div.stats(ng-controller="statCtrl")
            div.chart(ng-repeat="row in dataRows")
                h2 {{row.title}}
                word-chart(charttype="bar", chartdata = "row.stats")
    script(src="/resources/js/app.js")
            